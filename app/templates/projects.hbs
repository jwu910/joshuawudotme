<div class="projects">
  <div class="about">
    <div class="profile">
      <img alt="Profile Picture" src="https://placekitten.com/360/360" />
    </div>

    <AboutCard />
  </div>

  <h2 class="title">Projects</h2>

  {{#each model as |project|}}
    <ProjectCard
      @description={{project.description}}
      @image={{project.image}}
      @source={{project.source}}
      @tags={{project.tags}}
      @title={{project.title}}
      @website={{project.website}}
    />
  {{else}}
    <h5>
      Sorry, there seems to be an error loading projects. Check out my <a alt="Github link" href="https://github.com/jwu910">Github</a>
    </h5>
  {{/each}}
  {{outlet}}
</div>